[alter]="alter  = alternative to use for single quote character"
[base]="base   = base directory for storing files (must have a trailing /)"
[debug]="debug  = debug flag setting"
[help]="help   = help (display this message)"
[play]="play   = seconds to wait between song playing queries"
[quiet]="quiet  = enable/disable output to the console"
[reduce]="reduce = apply 'alter' option if set to 1"
[run]="run    = seconds to wait between program running queries"
[sleep]="sleep  = seconds to wait between song ended queries"
