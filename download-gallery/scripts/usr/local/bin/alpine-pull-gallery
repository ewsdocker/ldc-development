           --rm \
           -v /etc/localtime:/etc/localtime:ro \
           -v ${HOME}/RipMe:/data \
           -v ${HOME}/.config/docker/alpine-pull-gallery-latest/workspace:/workspace \
           --name=alpine-pull-gallery-latest \
       ewsdocker/alpine-pull-gallery 
